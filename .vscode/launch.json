{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Content Script",
      "type": "chrome",
      "request": "launch",
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "npm build:dev",
      "url": "https://boards.greenhouse.io/affirm/jobs/5937979003",
      "webRoot": "${workspaceFolder}/dist",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--load-extension=${webRoot}",
        "--reload-extension=${webRoot}"
      ],
      "resolveSourceMapLocations": ["${webRoot}", "!**/node_modules/**"]
    },
    {
      "name": "Debug: Content Script (Select)",
      "type": "chrome",
      "request": "launch",
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "npm build:dev",
      "url": "${input:url}",
      "webRoot": "${workspaceFolder}/dist",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--load-extension=${webRoot}",
        "--reload-extension=${webRoot}",
        "--auto-open-devtools-for-tabs"
      ],
      "resolveSourceMapLocations": ["${webRoot}", "!**/node_modules/**"]
    }
  ],
  "inputs": [
    {
      "id": "url",
      "type": "pickString",
      "description": "URL to test",
      "options": [
        // greenhouse
        "https://boards.greenhouse.io/affirm/jobs/5937979003",
        // lever.co
      ]
    }
  ]
}
