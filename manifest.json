{
    "manifest_version": 2,
    "name": "FillHistory",
    "version": "1.0",
    "description": "Displays browser history and fills in the link when selected",
    "permissions": [
        "history",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "commands": {
        "showHistory": {
            "description": "Show browser history",
            "suggested_key": {
                "default": "Ctrl+Shift+X"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}