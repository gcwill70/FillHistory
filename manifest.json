{
    "manifest_version": 2,
    "name": "FillHistory",
    "version": "1.0",
    "description": "Displays browser history and fills in the link when selected",
    "permissions": [
        "history",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "commands": {
        "showHistory": {
            "suggested_key": {
                "default": "Ctrl+."
            },
            "description": "Show browser history"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}