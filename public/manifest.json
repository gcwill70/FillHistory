{
  "name": "FillHistory",
  "version": "1.3.1",
  "description": "Quickly fill in links from browser history.",
  "manifest_version": 3,
  "permissions": ["history", "activeTab"],
  "icons": {
    "256": "icon256.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "showHistory": {
      "description": "Show browser history",
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
