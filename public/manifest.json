{
    "name": "FillHistory",
    "version": "0.1.0",
    "description": "Displays browser history and fills in the link when selected",
    "manifest_version": 3,
    "permissions": [
        "history",
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "showHistory": {
            "description": "Show browser history",
            "suggested_key": {
                "default": "Ctrl+Shift+X"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}